<h1>New Record</h1>

<%= form_with model: @record, local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit 'Create Record' %>
  </div>
<% end %>

<%= link_to 'Back', records_path %>
