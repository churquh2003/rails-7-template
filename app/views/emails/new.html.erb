<h1>New Email</h1>

<%= form_with model: [@user, @email], local: true do |form| %>
  <div>
    <%= form.label :subject %><br>
    <%= form.text_field :subject %>
  </div>

  <div>
    <%= form.label :recipient %><br>
    <%= form.text_field :recipient %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to User', user_path(@user) %>
