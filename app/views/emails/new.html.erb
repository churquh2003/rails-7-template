<h1>New Email</h1>

<%= form_with model: @email, local: true do |f| %>
  <div>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.submit 'Create Email' %>
  </div>
<% end %>

<%= link_to 'Back', emails_path %>
